<!--index.wxml-->
<view class="banner">
  <image class="img-banner" src="{{src}}" mode="{{mode}}"></image>
</view>
<view class="main">
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="info-area">
      <view class="section">
        <view class="flex-wrp" style="display: flex;flex-direction:row;">
          <view class="flex-item">
            <label class="info-title" style="display: flex;flex-direction:row;">姓名：</label>
          </view>
          <view class="flex-item">
            <input class="input" name="input_name" placeholder="please input here" type="text" auto-focus required/>
          </view>
        </view>
      </view>

      <view class="section">
        <view class="flex-wrp" style="display: flex;flex-direction:row;">
          <view class="flex-item">
            <label class="info-title">电话：</label>
          </view>
          <view class="flex-item">
            <input class="input" name="input_phone" placeholder="please input here" type="number" auto-focus required/>
          </view>
        </view>
      </view>

      <view class="section">
        <label class="info-title">聚会日期：</label>
        <radio-group name="input_date" class="radio-group" bindchange="radioChange">
          <label class="radio-label Ratio：" style="display: flex" wx:for="{{items}}">
            <radio value="{{item.name}}" checked="{{item.checked}}" />{{item.value}}
          </label>
        </radio-group>
      </view>

      <view class="section">
        <label class="info-title">聚会地点：</label>
        <label>南京理工大学</label>
      </view>
    </view>

    <view class="btn-area flex-wrp">
      <button class="button" formType="submit" type="primary">提交</button>
      <button class="button reset" formType="reset">重置</button>
    </view>
  </form>
</view>